<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/spider_popup_root"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/selectPopup_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/spider_popup_arrow"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/spider_popup_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/selectPopup_img"
        android:background="@drawable/spider_popup_bg"
        app:layoutManager="LinearLayoutManager"/>

</RelativeLayout>